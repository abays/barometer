LoadPlugin amqp1

<Plugin "amqp1">
{% for transport in amqp1_transports %}
  <Transport "{{ transport.name }}">
    Host "{{ transport.ip_addr }}""
    Port "{{ transport.port }}"
    {% if transport.user != "" %}
    User "{{ transport.user }}"
    {% endif %}
    {% if transport.password != "" %}
    Password "{{ transport.password }}"
    {% endif %}
    Address "{{ transport.address }}"
    {% for instance in transport.instances %}
    <Instance "{{ instance.name }}">
      Notify {{ instance.notify }}
      Format {{ instance.format }}
      PreSettle {{ instance.pre_settle }}
    </Instance>
    {% endfor %}
  </Transport>
{% endfor %}
</Plugin>
